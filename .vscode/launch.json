{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "env": {
                "PYLSL_LIB": "/home/linuxbrew/.linuxbrew/opt/lsl/lib/liblsl.so"
            }
        }
    ]
} 